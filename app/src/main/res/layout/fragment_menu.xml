<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.tesipro.com.herramientas.Menu">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/linterna"
            style="@style/botones"
            app:srcCompat="@drawable/linterna" />

        <Space style="@style/espacio" />

        <ImageButton
            android:id="@+id/nivel"
            style="@style/botones"
            app:srcCompat="@drawable/nivel" />

        <Space style="@style/espacio" />

        <ImageButton
            android:id="@+id/musica"
            style="@style/botones"
            app:srcCompat="@drawable/musica" />

    </LinearLayout>

</FrameLayout>
